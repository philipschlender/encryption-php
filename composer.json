{
    "authors": [
        {
            "name": "Philip Schlender"
        }
    ],
    "autoload": {
        "psr-4": {
            "Encryption\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "name": "philipschlender/encryption-php",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "github",
            "url": "https://github.com/philipschlender/faker-php.git"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-sodium": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.85",
        "philipschlender/faker-php": "^3.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.2"
    },
    "scripts": {
        "php-cs-fixer": [
            "./vendor/bin/php-cs-fixer fix"
        ],
        "phpstan": [
            "./vendor/bin/phpstan"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "phpunit-coverage": [
            "./vendor/bin/phpunit --coverage-text"
        ],
        "phpunit-coverage-html": [
            "./vendor/bin/phpunit --coverage-html coverage"
        ],
        "qa": [
            "@php-cs-fixer",
            "@phpstan",
            "@phpunit"
        ]
    },
    "type": "library"
}
